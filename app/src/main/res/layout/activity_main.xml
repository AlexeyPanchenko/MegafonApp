<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.megafonbalance.MainActivity">

    <ImageView
        android:id="@+id/activity_main_image_captcha"
        android:layout_width="match_parent"
        android:layout_height="125sp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">
        <EditText
            android:id="@+id/activity_main_edit_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Login"/>
        <EditText
            android:id="@+id/activity_main_edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="numberPassword"/>
        <EditText
            android:id="@+id/activity_main_edit_captcha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Captcha"/>
        <Button
            android:id="@+id/activity_main_button_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Login"/>
        <Button
            android:id="@+id/activity_main_button_balance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="balance"/>
        <TextView
            android:id="@+id/activity_main_text_balance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>



</RelativeLayout>
